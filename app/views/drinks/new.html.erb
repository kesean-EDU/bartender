<h1> Add a drink! </h1>
<%= form_for @drink do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <br><br>
    <%= f.label :drink_category %>
    <%= f.collection_select :drink_category_id, DrinkCategory.all, :id, :name %>
    <br><br>
    <%= f.submit %>
<% end %>
